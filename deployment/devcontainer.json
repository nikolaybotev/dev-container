{
  "name": "Nikolay Dev",
  "image": "nikolaybotev.com/dev:homebrew",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/git,type=bind",
  "workspaceFolder": "/workspaces/git",
  "customizations": {
    "vscode": {
      "extensions": ["ms-vscode.remote-containers"]
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/linuxbrew/.claude,type=bind",
    "source=${localEnv:HOME}/.config,target=/home/linuxbrew/.config,type=bind",
    "source=${localEnv:HOME}/.ssh,target=/home/linuxbrew/.ssh,type=bind"
  ],
  "postStartCommand": ".devcontainer/turn-off-git-signing.sh",
  "remoteUser": "linuxbrew"
}
